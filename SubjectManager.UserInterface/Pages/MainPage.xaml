<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubjectManager.UserInterface.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <CollectionView
                x:Name="SubjectsCollection"
                SelectionMode="Single"
                SelectionChanged="OnSubjectSelected">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="20" Margin="10" BackgroundColor="{StaticResource ItemList}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" />
                                <Label Text="{Binding FieldOfKnowledge}" FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
