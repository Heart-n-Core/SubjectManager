<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SubjectManager.UserInterface.Pages.SubjectFullPage"
    Title="Subject Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label x:Name="NameLabel" FontSize="20" />
            <Label x:Name="CreditsLabel" />
            <Label x:Name="FieldLabel" />
            <Label x:Name="DurationLabel" />

            <Label Text="Lessons:" FontAttributes="Bold" Margin="0,20,0,0"/>

            <CollectionView
                x:Name="LessonsCollection"
                SelectionMode="Single"
                SelectionChanged="OnLessonSelected">
                
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="3" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="20" Margin="10" BackgroundColor="{StaticResource ItemList}">
                            <VerticalStackLayout>
                                <Label Text="{Binding BeginDate}" />
                                <Label Text="{Binding LessonType}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <Button Text="Back to Subjects"
                    Clicked="OnBackClicked"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>